@using PizzaShop.Infrastructure
@model DishModel

<div class="menu-text">
    <div class="col-md-8">
        <h3 class="title">@Model.DishName</h3>
        <h4>
            @foreach (var ingredient in Model.Ingredients.OrderBy(i => i.IngredientName))
            {
                @ingredient.IngredientName<text> </text>
            }
        </h4>

    </div>
    <div class="col-md-4">
        <h3>@Model.Price.ToString("c")</h3>
        <a class="success-chalk" asp-action="AddToCart" asp-controller="Cart"
           asp-route-id="@Model.DishId"
           asp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()">Add to cart</a>
    </div> 
        

@using PizzaShop.Infrastructure
@inject ICartService _cartService
@model Cart
<div class="navbar-right">
    @if (Model.CartItems.Any())
    {
        <small class="navbar-text">
            <a class="navbar-link" asp-controller="Cart" asp-action="Index">
                <b>Your cart:</b>
                @Model.CartItems.Count() item(s)
                @_cartService.ComputeTotalValue().ToString("c")
            </a>
        </small>
    }
    <a class="btn btn-sm btn-default navbar-btn"
       asp-controller="Cart" asp-action="Index"
       asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i class="fa fa-shopping-cart"></i>
    </a>
</div>
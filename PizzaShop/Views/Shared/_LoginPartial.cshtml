@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="">
        <ul class="list-group list-unstyled list-inline">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Logged in as @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-default">Not you? Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="list-group list-unstyled list-inline">
        <li><a class="btn btn-default" asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a class="btn btn-default" asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}

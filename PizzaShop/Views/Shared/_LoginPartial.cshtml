@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="">
        <ul class="list-group list-unstyled">
            <li>
                <a class="success-chalk" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Logged in as @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="red-chalk submit">Not you? Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="list-group list-unstyled list-inline">
        <li><a class="purple-chalk" asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li><span class="ornament ornament-small">L</span></li>
        <li><a class="pink-chalk" asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
